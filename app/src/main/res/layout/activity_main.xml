<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/advert_btn"
        android:layout_width="227dp"
        android:layout_height="60dp"
        android:layout_marginTop="275dp"
        android:layout_marginBottom="48dp"
        android:text="@string/create_a_new_advert"
        app:layout_constraintBottom_toTopOf="@+id/lostfound_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/lostfound_btn"
        android:layout_width="262dp"
        android:layout_height="66dp"
        android:layout_marginStart="71dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="308dp"
        android:text="@string/show_all_lost_found_items"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advert_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>